original_string = "hello world, how are you?"

# Using title() method
title_case_string = original_string.title()

print(title_case_string)




def custom_title_case(input_string):
    return ' '.join(word.capitalize() for word in input_string.split())

original_string = "hello world, how are you?"

# Using custom_title_case function
title_case_string = custom_title_case(original_string)

print(title_case_string)
